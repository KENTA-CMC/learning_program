{
  "name": "streamlit-lab",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true,
      "uv": "latest"
    }
  },

  // onCreateCommand から外部スクリプトを呼び出す
  "onCreateCommand": [
    "chmod +x .devcontainer/setup.sh", // スクリプトを実行可能にする
    ".devcontainer/setup.sh" // スクリプトを実行
  ],

  "remoteEnv": {
    "PATH": "${containerWorkspaceFolder}/.venv/bin:$HOME/.local/bin:${containerEnv:PATH}"
  },

  "forwardPorts": [8501],

  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance"],
      "settings": {
        "python.pythonPath": "${containerWorkspaceFolder}/.venv/bin/python"
      }
    }
  }
}
