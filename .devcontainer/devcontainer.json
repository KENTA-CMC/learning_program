{
  "name": "streamlit-lab",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true,
      "uv": "latest"
    }
  },

  "onCreateCommand": [
    "/bin/bash -c \"chmod +x .devcontainer/setup.sh\"", // setup.shに実行権限を付与 (bash経由)
    "/bin/bash -c \".devcontainer/setup.sh\"" // setup.shを実行 (bash経由)
  ],

  "remoteEnv": {
    "PATH": "${containerWorkspaceFolder}/.venv/bin:$HOME/.local/bin:${containerEnv:PATH}"
  },

  "forwardPorts": [8501],

  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance"],
      "settings": {
        "python.pythonPath": "${containerWorkspaceFolder}/.venv/bin/python"
      }
    }
  }
}
