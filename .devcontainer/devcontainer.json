{
  "name": "streamlit-lab",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",

  // ❶ Feature は使わず、公式インストールスクリプトを実行
  "postCreateCommand": [
    // uv をユーザー領域にインストール（~/.local/bin/uv）
    "curl -Ls https://astral.sh/uv/install.sh | bash",

    // ❷ 依存を uv で入れる（--user で権限エラー回避）
    "uv pip install --user -r .devcontainer/requirements.txt"
  ],

  // ❸ すべてのシェルに ~/.local/bin を確実に通す
  "remoteEnv": {
    "PATH": "/home/codespace/.local/bin:/usr/local/bin:/usr/bin:/bin"
  },

  "forwardPorts": [8501],

  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance"]
    }
  }
}
