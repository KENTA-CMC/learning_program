{
  "name": "streamlit-lab",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true,
      "uv": "latest" // uvのインストールをfeaturesに任せる
    }
  },

  // Codespaceが起動した後に実行されるコマンド
  "postCreateCommand": [
    "chmod +x .devcontainer/setup.sh", // setup.shに実行権限を付与
    ".devcontainer/setup.sh" // setup.shを実行
  ],

  "remoteEnv": {
    // 仮想環境のbinディレクトリとローカルのbinディレクトリをPATHに追加
    "PATH": "${containerWorkspaceFolder}/.venv/bin:$HOME/.local/bin:${containerEnv:PATH}"
  },

  "forwardPorts": [8501],

  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance"],
      "settings": {
        // VS Codeが仮想環境のPythonインタープリタを使用するように設定
        "python.pythonPath": "${containerWorkspaceFolder}/.venv/bin/python"
      }
    }
  }
}
